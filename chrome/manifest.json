{
    "name": "Chrome Current Url",
    "description" : "Make chrome's currently active url available to other native processes",
    "version": "0.5.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "tabs",
        "nativeMessaging",
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "512": "link-512.png",
        "128": "link-128.png"
    }
}
